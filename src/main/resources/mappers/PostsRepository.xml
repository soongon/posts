<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.re.kitri.posts.dao.PostsRepository">

    <select id="selectPostsAll" resultType="kr.re.kitri.posts.model.Post">
        SELECT  id,
                title,
                body,
                likes
        FROM    posts
    </select>
    <select id="selectPostByPostId"
            resultType="kr.re.kitri.posts.model.Post">
        SELECT  id,
                title,
                body,
                likes
        FROM    posts
        WHERE   id = #{postId}
    </select>
    <insert id="insertPost" parameterType="kr.re.kitri.posts.model.Post">
        insert into posts (id, title, body, likes)
        values (#{id}, #{title}, #{body}, #{likes})
    </insert>
    <delete id="deletePostByPostId">
        delete
        from    posts
        where   id = #{postId}
    </delete>

</mapper>